page{
	background: #F2F2F2;
}
.top{
	padding-top: 50rpx;
	
}
.top button{
	width: 40%;
	height: 60rpx;
	line-height: 60rpx;
}

.info-one{
	box-sizing: border-box;
	padding:30rpx 4%;
	border-bottom: solid 1rpx #EEEEEE;
}
.head{
	width: 120rpx;
	height: 120rpx;
	margin-right: 20rpx;
}
.head image{
	height: 100%;
	width: 100%;
	
}
.head-right{
	height: 120rpx;
	width: 78%;
}
.info-text{
	margin: 20rpx 0rpx;
	
}
.info-text text{
	margin-right: 20rpx;
	flex-wrap: nowrap;
}

.fixd{
	position: fixed;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.6);
	top: 0rpx;
}
.fixd-box{
	width:90%;
	height: 400rpx;
	margin: 40% 5%;
	box-sizing: border-box;
	padding: 30rpx;
}
.fixd-box button{
	display: inline-block;
	border: solid 1rpx #FF5CA1;
	width: 120rpx;
	height: 50rpx;
	background: #fff;
	color: rgb(102,102,102);
	line-height: 50rpx;
	margin-left: 21%;
	margin-top: 80rpx;
}
.star{
	background: #FF5CA1 !important;
	color: #fff !important;
}

