.box{
	width:44%;
	height: 400rpx;
	margin: 4% 0rpx 0rpx 4%;
	position: relative;
	overflow: hidden;
	border-radius: 20rpx;
}
.box image{
	width: 100%;
	height: 100%;
}
.btm-box{
	position: absolute;
	bottom: 1%;
	left: 1.5%;
	background: rgba(0,0,0,0.5);
	width: 97%;
	height: 122rpx;
	box-sizing: border-box;
	padding: 20rpx;
}

.one-color{
	padding:10rpx 0rpx 14rpx;
	line-height:22rpx ;
	clear: both;
	flex-wrap: nowrap;
	overflow: hidden;
}
.one-color view{
	width:54rpx;
	height:22rpx;
	margin-right: 12rpx;
	text-align: center;
}

