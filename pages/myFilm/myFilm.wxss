page{
	background: #F5F5F5;
}
.top{
	width: 100%;
	height: 90rpx;
}
.top-item{
	width: 50%;
	text-align: center;
	line-height: 90rpx;
	color: rgb(33,33,33);
	box-sizing: border-box;
}
.top-item view{
	height: 100%;
	display: inline-block;
}
.top-itemstar view{
	color: rgb(255,92,161);
	border-bottom: solid 4rpx #FF5CA1;
}
.one{
	width:92%;
	box-sizing: border-box;
	margin: 4%;
	box-shadow: 0rpx 0rpx 20rpx #C4C4C4;
	
}
.list-one{
	width: 100%;
	box-sizing: border-box;
	padding: 30rpx 20rpx;
	border-bottom:solid 1rpx #F0F0F0 ;
	position: relative;
}
.one-img{
	width: 24%;
	height: 200rpx;
}
.one-img image{
	width: 100%;
	height: 100%;
}
.one-center{
	width: 58%;
	margin-left: 20rpx;
	position: relative;
	top: -8rpx;
}
.one-color{
	margin: 20rpx 0rpx;
	line-height:36rpx ;
}
.one-color view{
	width:82rpx;
	height: 36rpx;
	margin-right: 20rpx;
	text-align: center;
}
.one-right{
	width: 13%;
	text-align: center;
}
.one-heart{
	width: 90rpx;
	height:90rpx;
}
.one-heart image{
	width: 100%;
	height: 100%;
}

.fixd{
	background: rgba(0,0,0,0.6);
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0rpx;
}
.fixd-box{
	width: 50%;
	height: 31%;
	margin: 25%;
}
.fixd-box image{
	width: 100%;
	height: 100%;
}
.shear{
	width: 120rpx;
	height: 48rpx;
	border-radius: 0rpx 16rpx 0rpx 16rpx;
	position: absolute;
	top: 0rpx;
	right: 0rpx;
	line-height: 48rpx;
}


